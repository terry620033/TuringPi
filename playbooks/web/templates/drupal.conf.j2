# Redirect to www.
server {
    listen       80;
    server_name  {{ site_url }};
    return       301 http://www.{{ site_url }}$request_uri;
}

# Drupal 8 configuration.
server {
    listen 80;
    server_name {{ inventory_hostname }} www.{{ site_url }};
    root {{ drupal_docroot }};

    gzip on;
    gzip_static on;

    access_log {{ nginx_access_log }};

    location ~ \..*/.*\.php$ {
        return 403;
    }

    location ~ (^|/)\. {
        return 403;
    }

    location / {
        # Don't touch PHP for static content.
        try_files $uri /index.php?$query_string;
    }

    # Don't allow direct access to PHP files in the vendor directory.
    location ~ /vendor/.*\.php$ {
        deny all;
        return 404;
    }

    # Redirect common PHP files to their new locations.
    location ~ ^((?!.*(?:core)).*)/(install.php|rebuild.php) {
         return 301 $scheme://$host$1/core/$2$is_args$args;
    }

    location ~ \.php$|^/update.php {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        #NOTE: You should have "cgi.fix_pathinfo = 0;" in php.ini
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $request_filename;
        fastcgi_intercept_errors on;
        fastcgi_pass {{ php_fpm_listen }};
        fastcgi_read_timeout 240s;
        fastcgi_connect_timeout 2s;
        add_header X-Backend-Server $hostname;
    }

    location @rewrite {
        # Clean URLs are handled in drupal_environment_initialize().
        rewrite ^ /index.php;
    }

    location ~ ^/sites/.*/files/styles/ {
        try_files $uri @rewrite;
    }

    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    location = /robots.txt {
        allow all;
        log_not_found off;
        access_log off;
    }

    location ~* \.(jpg|jpeg|gif|css|png|js|ico|eot|svg|ttf|woff)$ {
        expires max;
        log_not_found off;
    }
}
