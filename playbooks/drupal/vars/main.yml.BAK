---
# The default configuration below installs a demonstration Drupal 8 site that
# can be used to demonstrate initial deployment and updates to a Drupal 8 site
# via Ansible and Drush. You can override this default configuration in your
# main config.yml in the project root.
#drupal_repo: "http://git.{{ site_url }}/demo-drupal-8.git"
drupal_repo: "https://drupalcode.org/project/drupal.git"
drupal_deploy_strategy: git clone --branch
drupal_version: "8.4.4"
drupal_keep_updated: yes
